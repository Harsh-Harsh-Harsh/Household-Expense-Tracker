        app:layout_constraintTop_toTopOf="@+id/Square1" />

    <TextView
        android:id="@+id/MonthExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:fontFamily="@font/oxygen_bold"
