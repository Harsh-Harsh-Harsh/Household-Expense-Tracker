        app:layout_constraintBottom_toBottomOf="@+id/AddExpenseMenu"
        app:layout_constraintEnd_toStartOf="@+id/addExpenseLight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddExpenseMenu"
        app:layout_constraintTop_toTopOf="@+id/AddExpenseMenu"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/editbox_background_normal"
        app:tint="@color/secondary_color" />

    <ImageView
        android:id="@+id/Square2"
        android:layout_width="299dp"
        android:layout_height="75dp"
        android:background="#00FF"
        android:contentDescription="@string/Empty"
        android:scaleType="fitXY"
