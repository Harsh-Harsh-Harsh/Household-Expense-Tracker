    <ImageView
        android:id="@+id/Bills_Image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/Empty"
