        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/secondary_color"
        android:fontFamily="@font/oxygen_bold"
        android:onClick="AddExpense"
        android:text="@string/Add"
        android:textColor="?android:attr/textColor"
        android:textColorLink="@color/secondary_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/AddExpenseMenu"
        app:layout_constraintEnd_toEndOf="@+id/AddExpenseMenu"
        app:layout_constraintTop_toTopOf="@+id/AddExpenseMenu"
        app:rippleColor="@color/hover_effect"
        app:strokeColor="@color/background"
        app:strokeWidth="1dp" />

    <EditText
        android:id="@+id/Amount"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:fontFamily="@font/oxygen"
        android:hint="@string/Amount"
        android:inputType="number"
        android:maxLength="8"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textColorHint="#40000000"
        android:textColorLink="@color/text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/AddExpenseMenu"
        app:layout_constraintStart_toStartOf="@+id/AddExpenseMenu"
        app:layout_constraintTop_toTopOf="@+id/AddExpenseMenu"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
