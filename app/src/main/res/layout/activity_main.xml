        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="#0000"
        android:dropDownWidth="wrap_content"
        android:entries="@array/Categorys"
        android:spinnerMode="dialog"
        android:textAlignment="inherit"
        app:layout_constraintBottom_toBottomOf="@+id/AddExpenseMenu"
        app:layout_constraintEnd_toStartOf="@+id/Add_Expense"
        app:layout_constraintStart_toEndOf="@+id/Amount"
        app:layout_constraintTop_toTopOf="@+id/AddExpenseMenu" />

    <CheckBox
        android:id="@+id/FDCheckBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:buttonTint="@color/background"
        android:buttonTintMode="multiply"
        android:checked="false"
        android:text="@string/Empty"
        app:buttonIconTint="@color/text"
        app:layout_constraintBottom_toBottomOf="@+id/FDBG"
        app:layout_constraintEnd_toEndOf="@+id/FDBG"
        app:layout_constraintStart_toEndOf="@+id/AddFDText"
        app:layout_constraintTop_toTopOf="@+id/FDBG"
        app:useMaterialThemeColors="false" />

    <ImageView
        android:id="@+id/Home_Button"
        android:layout_width="0dp"
        android:layout_height="80dp"
